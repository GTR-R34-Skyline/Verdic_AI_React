{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "CommonJS",
    "allowJs": true,  // ✅ Allow JavaScript files
    "checkJs": false,  // ❌ Don't type-check JavaScript
    "target": "ES2020",
    "types": ["node"]
  },
  "include": ["server/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
